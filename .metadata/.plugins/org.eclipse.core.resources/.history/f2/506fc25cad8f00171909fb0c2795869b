	    		temporaryStr = "\"[OBSTACLE_SUPPORT] Handling the obstacle.\"";
	    		println( temporaryStr );  
	    		//senseEvent
	    		aar = planUtils.senseEvents( 500,"sonarDetect","continue",
	    		"" , "",ActionExecMode.synch );
	    		if( ! aar.getGoon() || aar.getTimeRemained() <= 0 ){
	    			//println("			WARNING: sense timeout");
	    			addRule("tout(senseevent,"+getName()+")");
	    		}
	    		//onEvent
	    		if( currentEvent.getEventId().equals("sonarDetect") ){
	    		 		//println("WARNING: variable substitution not yet implmented " ); 
	    		 		if( planUtils.repeatPlan(nPlanIter,0).getGoon() ) continue;
	    		 }
	    		else{ temporaryStr = QActorUtils.unifyMsgContent(pengine, "noMoreObstacle","noMoreObstacle", guardVars ).toString();
	    		emit( "noMoreObstacle", temporaryStr );
	    		}//we should restore nPlanIter and curPlanInExec of the 'interrupted' plan ???
	    		returnValue = continueWork;
	    break;
	    }//while
	    return returnValue;
	    }catch(Exception e){
