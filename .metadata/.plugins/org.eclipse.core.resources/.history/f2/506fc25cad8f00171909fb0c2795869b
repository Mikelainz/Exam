	    public boolean handleObstacle() throws Exception{	//public to allow reflection
	    try{
	    	int nPlanIter = 0;
	    	//curPlanInExec =  "handleObstacle";
	    	boolean returnValue = suspendWork;		//MARCHH2017
	    while(true){
